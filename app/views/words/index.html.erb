<h1>words</h1>

<table>
  <tr>
    <th>word</th>
    <th>example</th>
    <th>meaning</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.content %></td>
    <td><%= word.example %></td>
    <td><%= word.meaning %></td>
    <td><%= link_to 'S', word %></td>
    <td><%= link_to 'E', edit_word_path(word) %></td>
    <td><%= link_to 'D', word_path(word), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

