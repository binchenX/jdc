    {
        txt = document.getSelection();
            }
    else if (document.selection)
    {
        txt = document.selection.createRange().text;
            }
    else return;
	document.aform.selectedtext.value =  txt;
	//let's issue a  GET using jqeury
 	var url = "http://localhost:3000/auto_create?content=pierrotlefou&meaning=greate";
    $.get(url,{},false);
    
}
</script>
