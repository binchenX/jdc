  <%= javascript_include_tag "tooltips.js" %>

  <%= csrf_meta_tag %>
  <script language=javascript>
function getSelText()
{
    var txt = '';
     if (window.getSelection)
    {
        txt = window.getSelection();
             }
    else if (document.getSelection)
    {
        txt = document.getSelection();
            }
    else if (document.selection)
    {
        txt = document.selection.createRange().text;
            }
    else return;
	//debug only
	document.aform.selectedtext.value =  txt;
	return txt
}

function saveSelText()
{
	var selText = getSelText()
	if (selText != "")
	{
	 	var url = "http://localhost:3000/auto_create?content="+getSelText();
    	$.get(url,{},false);
	}
}

$(document).ready(function(){
	$(document).mouseup(function(){
		//alert('Handler for .mouseup called.');
		saveSelText()
	})

})
//when anything is selected , save it to the website

</script>
<input type="button" value="Get selection and save  it" onmousedown="getSelText()"> 
<form name=aform >
<textarea name="selectedtext" rows="5" cols="20"></textarea>
</form>

<div class="tTip" id="cloud2" title="To hold cows together.">What's the greatest worldwide use of cowhide?</div>



